                                   FontAttributes="Bold"
                                   TextColor="#333" />

                            <HorizontalStackLayout Spacing="10">
                                <Label Text="{Binding CategoryName}"
                                       TextColor="#2196F3"
                                       FontSize="14" />

                                <Label Text="|"
                                       TextColor="LightGray" />

                                <Label Text="{Binding StatusName}"
                                       TextColor="DarkGreen"
                                       FontSize="14"
                                       FontAttributes="Italic" />
                            </HorizontalStackLayout>

                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>

        </CollectionView>

