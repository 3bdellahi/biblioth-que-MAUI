<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="project.Pages.AddBookPage"
             Title="Ajouter un nouveau livre"
             BackgroundColor="White">

    <ScrollView>
        <VerticalStackLayout Padding="25" Spacing="25">

            <VerticalStackLayout Spacing="8">
                <Label Text="Titre du livre :" 
                       TextColor="#333" 
                       FontAttributes="Bold" 
                       FontSize="15" 
                       Margin="5,0"/>

                <Border Stroke="#2196F3"
                        StrokeThickness="1"
                        StrokeShape="RoundRectangle 12"
                        Padding="10,0"
                        HeightRequest="55">
                    <Entry x:Name="TitleEntry"
                           Placeholder="Entrez le titre ici..."
                           PlaceholderColor="#999"
                           TextColor="Black"
                           VerticalOptions="Center" />
                </Border>
            </VerticalStackLayout>

            <VerticalStackLayout Spacing="8">
                <Label Text="CatÃ©gorie du livre :" 
                       TextColor="#333" 
                       FontAttributes="Bold" 
                       FontSize="15" 
                       Margin="5,0"/>

                <Border Stroke="#2196F3"
                        StrokeThickness="1"
                        StrokeShape="RoundRectangle 12"
                        Padding="10,0"
                        HeightRequest="55">
                    <Entry x:Name="CategoryEntry"
                           Placeholder="Exemple : Programmation, Roman..."
                           PlaceholderColor="#999"
                           TextColor="Black"
                           VerticalOptions="Center" />
                </Border>
            </VerticalStackLayout>

            <VerticalStackLayout Spacing="8">
                <Label Text="Statut de lecture :" 
                       TextColor="#333" 
                       FontAttributes="Bold" 
                       FontSize="15" 
                       Margin="5,0"/>

                <Border Stroke="#2196F3"
                        StrokeThickness="1"
                        StrokeShape="RoundRectangle 12"
                        Padding="10,0"
                        HeightRequest="55">
                    <Entry x:Name="StatusEntry"
                           Text="En cours de lecture"
                           PlaceholderColor="#999"
                           TextColor="Black"
                           VerticalOptions="Center" />
                </Border>
            </VerticalStackLayout>

            <Button Text="Enregistrer le livre"
                    Clicked="OnSaveClicked"
                    BackgroundColor="#2196F3"
                    TextColor="White"
                    HeightRequest="60"
                    FontSize="18"
                    FontAttributes="Bold"
                    CornerRadius="30"
                    Margin="0,10,0,0">
                <Button.Shadow>
                    <Shadow Brush="#2196F3" Offset="0,4" Radius="10" Opacity="0.3" />
                </Button.Shadow>
            </Button>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>