<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="project.Pages.BookDetailsPage"
             Title="Détails du livre"
             BackgroundColor="White">

    <Grid RowDefinitions="Auto, *, Auto" Padding="20">

        <!-- En-tête -->
        <VerticalStackLayout Grid.Row="0" Spacing="10" Margin="0,0,0,20">
            <Label x:Name="TitleLabel"
                   FontSize="26"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="Black" />

            <Label x:Name="StatusLabel"
                   FontSize="16"
                   TextColor="DimGray"
                   HorizontalOptions="Center" />

            <BoxView HeightRequest="1"
                     Color="LightGray"
                     Margin="0,10" />

            <Label Text="Notes personnelles :"
                   FontSize="18"
                   FontAttributes="Bold"
                   TextColor="Black" />
        </VerticalStackLayout>

        <!-- Liste des notes -->
        <CollectionView x:Name="NotesCollection" Grid.Row="1">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Border Margin="0,5" Padding="10" BackgroundColor="#F9F9F9">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="10"/>
                        </Border.StrokeShape>
                        <Label Text="{Binding Content}" FontSize="15" TextColor="Black" />
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- Ajout d'une nouvelle note -->
        <VerticalStackLayout Grid.Row="2" Spacing="10" Margin="0,10,0,0">
            <Editor x:Name="NewNoteEditor"
                    Placeholder="Écrire une nouvelle note..."
                    HeightRequest="80"
                    BackgroundColor="#F0F0F0"
                    TextColor="Black"
                    PlaceholderColor="Gray" />

            <Button Text="Ajouter la note"
                    Clicked="OnAddNoteClicked"
                    CornerRadius="5" />
        </VerticalStackLayout>

    </Grid>
</ContentPage>
